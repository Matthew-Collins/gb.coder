Public Function GetFirstProjectFile() As ProjectFile

  Dim ProjectFile As ProjectFile

  For Each ProjectFile In Me.ProjectFiles
    Return ProjectFile
  Next

End

Public Sub Save()

  Dim ProjectFile As ProjectFile

  For Each ProjectFile In Me.ProjectFiles
    ProjectFile.Flush()
  Next

End

Public Sub Run()

  Dim Compiler As New String[]

  Me.Save()

  Select Case Me.Type
    Case ProjectTypes.VbCore
      Compiler.Add("dotnet")
      Compiler.Add("run")
      Compiler.Add("-p")
      Compiler.Add(RootFolder)

    Case ProjectTypes.SwiftScript
      Compiler.Add("swift")
      Compiler.Add(rootfolder &/ "main.swift")

    Case ProjectTypes.GambasScript
      Compiler.Add("gbs3")
      Compiler.Add(rootfolder &/ "Main.module")

    Case Else
      Message.Error("No Compiler Configured for Project Type")

  End Select

  Exec.Execute(Compiler, Compiler, True, False, "")

End

Public Sub Debug()

  Dim Compiler As New String[]

  Me.Save()

  Select Case Me.Type
    Case ProjectTypes.SwiftScript

      Compiler.Add("swiftc")
      Compiler.Add("-g")
      Compiler.Add(rootfolder &/ "main.swift")
      Exec.Execute(Compiler, Compiler, True, False, "")

      Me.Debugger = New DebuggerLLDB(RootFolder &/ "main")
      Me.Debugger.SetBreakPoints([1])
      Me.Debugger.Run()

    Case Else
      Message.Error("No Debugger Configured for Project Type")

  End Select

End

Public Sub Continue()

  If Not IsNull(Me.Debugger)
    Me.Debugger.Continue()
  End If

End

Public Sub Stop()

  If Not IsNull(Me.Debugger)
    Me.Debugger.Exit()
  End If

End
