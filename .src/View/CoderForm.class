Public Sub ProjectObserver_DisplayLine(Value As String)

  Commands.Text &= CStr(Value) & If(True, "\n", "")
  Commands.EnsureVisible
  Wait

End

Public Sub ProjectObserver_ShowFile(ProjectFile As ProjectFile)

  Dim Tab As Control
  Dim Index As Integer
  Dim IsOpen As Boolean

  For Index = 0 To Tabs.Count - 1
    Tab = Tabs[Index]
    If Not IsNull(Tab.Tag) And If Tab.Tag = ProjectFile Then
      Tabs.Index = Index
      IsOpen = True
      Break
    Endif
  Next

  If Not IsOpen Then
    ProjectFile.AddTab(Tabs, FirstTab)
    Tabs.Index = Tabs.Count - 1
    FirstTab = False
    Tabs.Show
  Endif

End
